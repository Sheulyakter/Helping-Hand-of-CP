<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_ndnload"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="2dp"
    android:gravity="center_horizontal"
android:background="@drawable/backgroundblack"
    tools:context="com.example.purnota.pending.ViewNDnload">

    <Button
        android:layout_marginLeft="1dp"
        android:drawableLeft="@drawable/eye"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:id="@+id/view"
        android:layout_marginTop="230dp"
        android:text="View The PDF"/>

    <Button
        android:layout_marginLeft="4dp"
        android:drawableLeft="@drawable/download"
        android:background="@color/colorGrassDark"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:id="@+id/dnld"
        android:text="Download Here"
        android:layout_below="@+id/view"
        android:layout_alignLeft="@+id/view"
         />

</RelativeLayout>
